<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :visibility_status %><br />
    <%= select 'person', 'visibility_status', ['Invisible', 'Offline', 'Online', 'ContactMe'].collect{|status| [status, status]}%>
  </div>
  <div class="field">
    <%= f.label :offline_since %><br />
    <%= f.text_field :offline_since, :class => 'datetime-picker'%>
  </div>
  <div class="field">
    <%= f.label :nick %><br />
    <%= f.text_field :nick %>
  </div>
  <div class="field">
    <%= f.label :mood %><br />
    <%= f.text_field :mood %>
  </div>
  <div class="field">
    <%= f.label :gravatar_code %><br />
    <%= f.text_field :gravatar_code %>
  </div>
  <div class="field">
    <%= f.label :born_on %><br />
    <%= f.text_field :born_on, :class => 'date-picker'%>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= select 'person', 'gender', ['Male', 'Female', 'Other'].collect{|g| [g, g]}, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :looking_for_genders %><br />
    <%= f.check_box :looking_for_genders_male %> Male
    <%= f.check_box :looking_for_genders_female %> Female
    <%= f.check_box :looking_for_genders_other %> Other
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :occupation %><br />
    <%= f.text_field :occupation %>
  </div>
  <div class="field">
    <%= f.label :hobby %><br />
    <%= f.text_field :hobby %>
  </div>
  <div class="field">
    <%= f.label :main_location %><br />
    <%= f.text_field :main_location %>
  </div>
  <div class="field">
    <%= f.label :last_known_location %><br />
    Latitude: <%= f.text_field :last_known_location_latitude %> <br />
    Longitude: <%= f.text_field :last_known_location_longitude %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
